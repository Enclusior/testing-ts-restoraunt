{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],

    // Module Resolution
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Output
    "sourceMap": true,
    "declaration": true,

    // Decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Strict checks
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,        // Отключено - неиспользуемые переменные
    // "noUnusedParameters": true,    // Отключено - неиспользуемые параметры

    // Other
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
